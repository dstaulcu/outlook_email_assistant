{
  "name": "promptreply",
  "version": "1.0.0",
  "description": "PromptReply - AI-powered email assistant for Microsoft Outlook with OpenAI and Ollama support",
  "main": "dist/main.js",
  "scripts": {
    "dev": "webpack serve --mode development",
    "build": "webpack --mode production",
    "start": "webpack serve --mode development --open",
    "start:https": "webpack serve --mode development --https",
    "install-certs": "office-addin-dev-certs install",
    "verify-certs": "office-addin-dev-certs verify",
    "validate-manifest": "powershell -Command \"try { [xml](Get-Content public/manifest.xml -Raw) | Out-Null; Write-Host 'Manifest XML is valid' -ForegroundColor Green } catch { Write-Host 'Manifest XML is invalid:' $_.Exception.Message -ForegroundColor Red; exit 1 }\"",
    "sideload": "powershell -ExecutionPolicy Bypass -File sideload-addin.ps1",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "deploy": "npm run build && node scripts/deploy.js",
    "deploy:home": "node scripts/deploy.js home",
    "deploy:work": "node scripts/deploy.js work",
    "download-manifest": "powershell -ExecutionPolicy Bypass -File download-manifest.ps1",
    "update-manifest": "powershell -ExecutionPolicy Bypass -File update-manifest.ps1",
    "create-icons": "powershell -ExecutionPolicy Bypass -File create-simple-icons.ps1",
    "update-branding": "echo 'Branding updated to PromptReply'"
  },
  "keywords": [
    "outlook",
    "office-add-in",
    "ai",
    "email",
    "openai",
    "ollama"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@fluentui/react": "^8.110.0",
    "@fluentui/react-components": "^9.40.0",
    "@fluentui/react-icons": "^2.0.220",
    "@microsoft/office-js": "^1.1.85",
    "@microsoft/office-js-helpers": "^1.0.1",
    "crypto-js": "^4.2.0",
    "openai": "^4.20.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@axe-core/react": "^4.10.2",
    "@types/crypto-js": "^4.2.2",
    "@types/jest": "^29.5.3",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "aws-sdk": "^2.1692.0",
    "css-loader": "^6.8.1",
    "eslint": "^8.45.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "html-webpack-plugin": "^5.5.3",
    "jest": "^29.6.2",
    "office-addin-dev-certs": "^2.0.3",
    "style-loader": "^3.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.4",
    "typescript": "^5.1.6",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.2"
  }
}
